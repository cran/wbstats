  textVersion  =
  paste("Jesse Piburn (2018).",
        "wbstats: Programmatic Access to the World Bank API.",
        "Oak Ridge National Laboratory.",
        "Oak Ridge, Tennessee.",
        "URL https://www.ornl.gov/division/csed/gist")
)
